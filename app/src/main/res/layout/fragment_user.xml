<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F09819"
    android:gravity="center"
    tools:context=".UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/useinfo"
                    android:layout_width="333dp"
                    android:layout_height="124dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/s1"
                    android:gravity="center"
                    android:text="Welcome "

                    android:textColor="#FFFBE6"
                    android:textSize="30sp" />


            </RelativeLayout>

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:text="Balance "
                app:met_baseColor="@color/colorAccent2"
                app:met_clearButton="true"
                app:met_errorColor="@color/darkWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/price"
                app:met_primaryColor="@color/colorAccent2" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:text="Help"
                app:met_baseColor="@color/colorAccent2"
                app:met_clearButton="true"
                app:met_errorColor="@color/darkWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/question"
                app:met_primaryColor="@color/colorAccent2" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:text="Share"
                app:met_baseColor="@color/colorAccent2"
                app:met_clearButton="true"
                app:met_errorColor="@color/darkWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/shareu"
                app:met_primaryColor="@color/colorAccent2" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:text="Settings"
                app:met_baseColor="@color/colorAccent2"
                app:met_clearButton="true"
                app:met_errorColor="@color/darkWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/settingsu"
                app:met_primaryColor="@color/colorAccent2" />

            <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
                android:id="@+id/logout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="none"
                android:text="Log out"
                app:met_baseColor="@color/colorAccent2"
                app:met_clearButton="true"
                app:met_errorColor="@color/darkWhite"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/logout"
                app:met_primaryColor="@color/colorAccent2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forgot_pass"
                    style="@style/fonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright Â© 2020 Aljezawi Co. All rights reserved." />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
